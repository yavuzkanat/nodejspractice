extends ../layouts/main-layout.pug

block content 
    form(action="/admin/upload-file" method="post" enctype="multipart/form-data")
      div
        label(for="file") Choose file:
        input#file(type="file" name="file" accept="image/png,image/jpeg")
      div
        button(type="submit") Upload
    
    if msg
      p(style="color:red") #{msg}

    if uploadedFile
      h2 Upload result
      p Filename: #{uploadedFile.name}
      p Type: #{uploadedFile.mimetype}
      p Size: #{(uploadedFile.size / 1024).toFixed(1)} KB

      img(src=`/img/${uploadedFile.name}` style="max-width:300px; display:block; margin-top:10px;")