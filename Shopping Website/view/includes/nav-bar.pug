nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      .container
        a.navbar-brand.text-white Shopping
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            li.nav-item
              a(href='/',class=(path === '/' ? 'nav-link active text-white ':'nav-link text-body-tertiary ')) Home
            li.nav-item
              a(href='/products',class= (path === '/products' ? 'nav-link active text-white':'nav-link text-body-tertiary')) Products
            if session && session.isLoggedIn
              li.nav-item
                a(href='/cart',class= (path === '/cart' ? 'nav-link active text-white':'nav-link text-body-tertiary')) Cart
              
            if session.isAdmin && session && session.isLoggedIn
              li.nav-item.dropdown
                  a#minDropdown.nav-link.dropdown-toggle(
                    href="#"
                    role="button"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                    class=(('/admin') ? 'text-white' : 'text-body-tertiary')
                  ) Admin Panel

                  ul.dropdown-menu(aria-labelledby="adminDropdown")
                    li
                      a.dropdown-item(
                        href="/admin/add-product"
                        class=(path === '/admin/add-product' ? 'active' : '')
                      ) Add Product
                    li
                      a.dropdown-item(
                        href="/admin/add-category"
                        class=(path === '/admin/add-category' ? 'active' : '')
                      ) Add Category
                    li
                      a.dropdown-item(
                        href="/admin/products"
                        class=(path === '/admin/products' ? 'active' : '')
                      ) Products
                    li
                      a.dropdown-item(
                        href="/admin/category"
                        class=(path === '/admin/category' ? 'active' : '')
                      ) Categories
                    li
                      a.dropdown-item(
                        href="/admin/upload-file"
                        class=(path === '/admin/upload-file' ? 'active' : '')
                      ) Upload File
              
          ul.navbar-nav.ms-auto      
            if session && session.isLoggedIn
              li.nav-item
                  a(class='nav-link text-white') #{session.mail}
              li.nav-item
                  a(href='/logout', class='nav-link text-white') Logout
            else
              li.nav-item
                a(href='/login', class= (path === '/login' ? 'nav-link active text-white':'nav-link text-body-tertiary')) Login
              li.nav-item
                a(href='/register', class= (path === '/register' ? 'nav-link active text-white':'nav-link text-body-tertiary')) Register